<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSinger"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:progress="0"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/StopBtn"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSinger"
        android:layout_alignLeft="@+id/txtSinger"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Song name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivMusic"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/ivMusic"
        android:layout_toRightOf="@+id/ivMusic"
        android:text="Singer"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/PlayBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/StopBtn"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/StopBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/TextBtn"
        android:src="@drawable/stop" />

    <ImageView
        android:id="@+id/TextBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/lyrics" />

    <TextView
        android:id="@+id/lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarSound"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="499dp"
        android:gravity="center"
        android:hint="Lyrics of the song..."
        android:paddingTop="20dp"
        android:scrollHorizontally="false"
        android:textAllCaps="false"
        android:textColor="#00496A"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:fontFamily="sans-serif-light" />

    <SeekBar
        android:id="@+id/seekBarSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_marginStart="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:progress="50"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iSound2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/seekBar"
        android:layout_alignLeft="@id/seekBarSound"
        android:layout_marginStart="-40dp"
        android:src="@drawable/sound2"
        android:visibility="gone" />

</RelativeLayout>